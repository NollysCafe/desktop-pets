{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
		"lib": [ "ES2020", "DOM" ],
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "noEmit": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "~/*": [ "src/*" ]
    }
  },
  "include": [ "src" ]
}
